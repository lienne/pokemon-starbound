script Astridale_EventScript_CitySign {
    lockall
    msgbox("Astridale\n"
        "“Growing towards tomorrow without forgetting yesterday”")
    releaseall
}

script Astridale_EventScript_ConstructionSign {
    lockall
    msgbox("Construction Site\n"
        "Mind the dust!")
    releaseall
}

