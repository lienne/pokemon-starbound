script WhisperingGrove_EventScript_RouteSign {
    lockall
    msgbox(format("Whispering Grove\n"
        "“Where the trees murmur secrets”"))
    releaseall
}

script WhisperingGrove_EventScript_TrainerTipsSigns {
    lockall
    msgbox(format("Trainer Tips!\n"
        "People often drop items in the forest.\p"
        "It's dark so they're difficult to see.\p"
        "Check every corner and you might find something useful!"))
    releaseall
}

